{
  "name": "@jbcom/otter-river-rush",
  "version": "2.0.0",
  "description": "Fast-paced river racing game with procedural level generation - built with React Three Fiber and @jbcom/strata",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "public"
  ],
  "keywords": [
    "game",
    "react",
    "three.js",
    "react-three-fiber",
    "endless-runner",
    "strata",
    "3d-game",
    "webgl"
  ],
  "author": "jbcom",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jbcom/nodejs-otter-river-rush.git",
    "directory": "src/client"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:lib": "tsc --declaration --emitDeclarationOnly && vite build --mode lib",
    "preview": "vite preview",
    "test": "vitest",
    "test:e2e": "playwright test",
    "lint": "biome check src",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "three": ">=0.160.0"
  },
  "dependencies": {
    "@jbcom/strata": "^1.3.1",
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.4.0",
    "@react-three/postprocessing": "^3.0.4",
    "@react-three/rapier": "^2.2.0",
    "howler": "^2.2.4",
    "miniplex": "^2.0.0",
    "miniplex-react": "^2.0.1",
    "postprocessing": "^6.37.8",
    "yuka": "^0.7.8",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/howler": "^2.2.11",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/three": "^0.181.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "daisyui": "^5.3.9",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.16",
    "three": "^0.181.0",
    "typescript": "^5.5.0",
    "vite": "^7.1.12",
    "vitest": "^4.0.3"
  }
}
